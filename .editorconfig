# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# C/C++ source files
[*.{c,cpp}]
indent_style = space
indent_size = 2

# Assembly
[*.s]
indent_style = space
indent_size = 2

# Linker
[*.ld]
indent_style = space
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab
indent_size = 4
